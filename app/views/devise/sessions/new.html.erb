<div style="height: 100vh; display: flex; flex-direction: column; justify-content: flex-start; align-items: center; text-align: center; padding-top: 100px;">
<h1>Connexion</h1>
<p>Nous sommes ravis de te revoir!</p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'devise-sign-in-form' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control" } %>
    <%= f.input :password,
                required: true,
                input_html: { autocomplete: "current-password", class: "form-control" } %>
    <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter", class: "button small-button-orange" %>
  </div>
<% end %>
<br>

<%= render "devise/shared/links" %>
</div>
