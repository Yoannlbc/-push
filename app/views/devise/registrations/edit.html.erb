<div class="edit-container">
  <div class="form-header">
    <%= link_to profile_path, class: "back-button" do %>
      <i class="material-icons material-symbols-sharp" style="font-size: 40px; vertical-align: middle; margin-left: 35px; transform: translateY(30px);">west</i>
    <% end %>
     <div class="text-center pt-5 position-relative">
    <h2 class="form-title">Modifier mon profil</h2>
  </div>

  <div class="form-card">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <%= f.input :first_name, required: true, autofocus: true, label: "Prénom", input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :last_name, required: true, label: "Nom", input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :email, required: true, label: "Email", input_html: { class: 'form-control' } %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <div class="form-group">
        <%= f.input :password,
                    hint: "Laissez ce champ vide si vous ne souhaitez pas le modifier",
                    required: false,
                    input_html: { autocomplete: "nouveau mot de passe", class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "nouveau mot de passe", class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :current_password,
                    hint: "Nous avons besoin de votre mot de passe actuel pour confirmer la modification",
                    required: true,
                    input_html: { autocomplete: "mot de passe actuel", class: 'form-control' } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Mettre à jour", class: "button submit-button" %>
      </div>
    <% end %>
  </div>

<div class="delete-account pt-4 text-center">
  <h3>Supprimer mon compte</h3>
    Mécontent? <%= button_to "Annuler mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr(e)?", turbo_confirm: "Etes-vous sûr(e)?" }, method: :delete, class: 'button delete-account-button' %>
  </div>

  <%= link_to "Retour", :back, class: 'back-link' %>
</div>
